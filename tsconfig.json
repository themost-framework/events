{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "sourceRoot": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./",
        "stripInternal": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "paths": {
            "@themost/events/platform-server": [
                "platform-server/src/index"
            ],
            "@themost/events": [
                "src/index"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "test",
        "platform-server",
        "**/*.spec.ts"
    ],
    "files": [
        "src/index.ts",
    ]
}
